{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "dom",
      "es7"
    ]
  },
  "allowSyntheticDefaultImports": true,
  "include": [
    "./src/**/*",
    "./node_modules/@types/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "forceIsolatedModules": true,
    "errorsAsWarnings": true,
    "reportFiles": [
      "./src/**/*.{ts,tsx}",
    ],
  }
}
